# Maintainer: John Jenkins <twodopeshaggy@gmail.com>

pkgname=drive
pkgver=1
pkgrel=1
pkgdesc="Pull or push Google Drive files"
arch=('x86_64' 'i686')
url="http://github.com/odeke-em/drive"
license=('Apache')
makedepends=('go' 'git')
options=('!strip' '!emptydirs')
source=("git+git://github.com/odeke-em/$pkgname")
sha256sums=("SKIP")

prepare() {
 mkdir -p go
 export GOPATH="$srcdir/go"
 go get github.com/odeke-em/drive
 go get github.com/odeke-em/drive/config
 go get github.com/rakyll/command
}

build() {
  export GOPATH="$srcdir/go"
  cd "$pkgname/cmd/drive"

  msg2 'Building drive'
  go build -o "$pkgname" main.go

}

package() {
  cd "$pkgname/cmd/drive"

  install -Dm755 "$pkgname" "$pkgdir/usr/bin/$pkgname"

}
# vim:set ts=2 sw=2 et:
